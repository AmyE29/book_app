<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layouts/head') -%>
</head>
<body>
    <header>
    <%- include('../layouts/header') -%>
    </header>
    <main>
        <form method='POST' action='/searches'>
            <label>Search<input type='text' name='searchField' required></label>
            <label><input type='submit' name='submit'></label>
            <input type='radio' name='searchType' value='title' checked>Search by Title
            <input type='radio' name='searchType' value='author'>Search by Author
        </form>
    </main>
    <footer></footer>
    <script src = "../../server.js"></script>
</body>
    <div>Total Books: <%= results.length %></div>
    <% results.forEach(book => { %>
      <div>
        <ul>
          <li>Title: <%= book.title %></li>
          <li>Author: <%= book.author %></li>
          <li>Description: <%= book.description %></li>
          <li>ISBN: <%= book.isbn %></li>
          <li>Bookshelf: <%= book.bookshelf %></li>
          <% }) %>
        </ul>
      </div>
   

    